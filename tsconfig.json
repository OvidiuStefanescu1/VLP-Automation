{
  "compilerOptions": {
    "target": "ES2020",                  
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                 
    "rootDir": "./",                     
    "resolveJsonModule": true,         
    "moduleResolution": "node",         
    "types": ["node"]                    
  },
  "include": [
    "tests/**/*",
    "utils/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "node_modules",
    "state",
    "test-results",
    "test-results-custom",
    "dist" 
  ]
}
